{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": [
      "warn",
      {
        "allow": [
          "error"
        ]
      }
    ],
    "no-undef": "error",
    "prefer-const": "warn"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/"
  ]
}
